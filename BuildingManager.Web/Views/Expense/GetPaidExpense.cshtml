@model List<ExpenseDto>

<div class="container mb-5 mt-5">
    <h3>Tahsilat Listesi</h3>
</div>

<table id="datatable" style="width:100%" class="table table-hover table-striped">
    <thead class="thead-info">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Ödendimi</th>
        <th scope="col">Fiyat</th>
        <th scope="col">Tarih</th>
        <th scope="col">Kullanıcı Adı</th>
        <th scope="col">Daire Numarası</th>
        <th scope="col">Gider Tipi</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var expense in Model)
    {
        <tr>
            <td>@expense.Id</td>
            <td>@if (expense.IsPaid ==true)
                            {
                                <span class="badge badge-pill badge-success"><i class="fa fa-check-circle"></i></span>
                            }
                            else
                            {
                                <span class="badge badge-pill badge-danger"><i class="fa fa-ban"></i></span>
                            }</td>
            <td>@expense.Price</td>
            <td>@expense.InvoiceDate</td>
            <td>@expense.UserName</td>
            <td>@expense.FlatNumber</td>
            <td>@expense.ExpenseTypeName</td>
        </tr>
    }
    </tbody>
</table>