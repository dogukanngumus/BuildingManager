@model FlatCreateDto

<form asp-controller="Flat" asp-action="AddFlat" class="was-validated">
    <div class="mb-3">
        <label asp-for="FlatNumber">Daire Numarası</label>
        <input type="number" class="form-control" asp-for="FlatNumber" maxlength="50"/>
        <span asp-validation-for="FlatNumber" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="TypeOfFlat">Daire Tipi</label>
        <input type="text" class="form-control" asp-for="TypeOfFlat" required/>
        <span asp-validation-for="TypeOfFlat" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="UserId">Kullanıcı</label>
        <select asp-for="UserId" class="form-control" required
                asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            <option>Lütfen birini seçiniz</option>
        </select>
         <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BuildingId">Blok</label>
        <select asp-for="BuildingId" class="form-control" required
                asp-items="@(new SelectList(Model.Buildings, "Id", "BuildingName"))">
            <option>Lütfen birini seçiniz</option>
        </select>
         <span asp-validation-for="BuildingId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>